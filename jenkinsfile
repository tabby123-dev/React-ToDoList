pipeline {
    agent any

    environment {
        NODE_ENV = 'development'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/tabby123-dev/React-ToDoList.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    echo 'Installing dependencies in backend...'
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('backend') {
                    echo 'Running tests...'
                    sh 'npm test'
                }
            }
        }

        stage('Build') {
            steps {
                dir('backend') {
                    echo 'Building the app...'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                dir('backend') {
                    echo 'Deploying the app...'
                    // Example deploy command:
                    // sh 'scp -r ./dist user@server:/var/www/app'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully üéâ'
        }
        failure {
            echo 'Pipeline failed ‚ùå'
        }
    }
}
